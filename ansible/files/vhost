<VirtualHost *:8888>
    DocumentRoot {{ drupal_dir }}
    DirectoryIndex index.php
    <Directory {{ drupal_dir }}>
        RewriteEngine on
        RewriteBase /
        RewriteCond %{REQUEST_FILENAME} !-f
        RewriteCond %{REQUEST_FILENAME} !-d
        RewriteCond %{REQUEST_URI} !=/favicon.ico
        RewriteRule ^ index.php [L]
    </Directory>
</VirtualHost>

